# SMTP2HTTP Configuration
# Copy this file to .env and modify the values as needed

# SMTP Server Settings
SMTP_SERVER_NAME=smtp2http
SMTP_LISTEN_ADDR=:smtp
READ_TIMEOUT=5
WRITE_TIMEOUT=5
MAX_MESSAGE_SIZE=2097152

# Webhook Configuration
# When USE_POSTMARK_FORMAT=true, defaults to https://api.postmarkapp.com/email
# Otherwise defaults to http://localhost:8080/my/webhook
WEBHOOK_URL=
USE_POSTMARK_FORMAT=false

# Postmark Configuration (when USE_POSTMARK_FORMAT=true)
POSTMARK_SERVER_TOKEN=

# SMTP Authentication (optional)
SMTP_USER=
SMTP_PASS=

# Domain Filtering (optional)
# Only accept emails for this domain - leave empty to accept all domains
ALLOWED_DOMAIN=